<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4 mb-5 bg-white rounded">
                <h2 class="text-center mb-4">Forgot your password?</h2>
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post))

                {
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="form-group mb-4">
                        <label class="form-label" for="UserName">User Name</label>
                        @Html.TextBoxFor(model => model.UserName, new
                            {
                                @class = "form-control form-control-lg transition-shadow",
                                id = "UserName"
                            })
                        @Html.ValidationMessageFor(model => model.UserName, "", new
                            {
                                @class = "text-danger"
                            })
                    </div>

                    <div class="d-flex justify-content-center mb-4">
                        <button type="submit" class="btn btn-primary btn-lg transition-shadow">Send Password Reset Link</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .transition-shadow {
            transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .transition-shadow:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
        }

        .card {
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
}