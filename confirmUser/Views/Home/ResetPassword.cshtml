@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model confirmUser.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-lg border-0 transition-transform">
                <div class="card-body p-md-5">
                    <h2 class="text-center mb-5 text-primary">Reset Your Password</h2>
                    <hr />
                    @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))

                    {
                        @Html.AntiForgeryToken()

                        <div class="form-outline mb-4">
                            <label class="form-label" for="UserName">@localizer["UserNameLabel"]</label>
                            @Html.TextBoxFor(model => model.UserName, new
                                {
                                    @class = "form-control form-control-lg transition-shadow",
                                    id = "UserName"
                                })
                            <input type="hidden" asp-for="Flag" value="1" />
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-lg transition-shadow" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg transition-shadow" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center mb-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill transition-shadow">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .transition-shadow {
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

            .transition-shadow:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transform: scale(1.02);
            }

        .card {
            background-color: #ffffff;
            border-radius: 1rem;
        }

        .card-body {
            padding: 2rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-control-lg {
            font-size: 1.1rem;
            border-radius: 0.5rem;
        }

        .form-label {
            font-size: 0.875rem;
        }

        .text-primary {
            color: #221d90 !important;
        }
    </style>
}
