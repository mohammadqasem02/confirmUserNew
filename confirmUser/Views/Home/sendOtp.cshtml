@model LoginUserFormViewModel

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg rounded-lg border-0 transition-transform">
                <div class="card-body p-md-5">
                    <h2 class="text-center mb-4 text-primary">Login</h2>
                    <form asp-action="SendOtp" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-4">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control form-control-lg transition-shadow" />
                            @Html.ValidationMessageFor(model => model.UserName, "", new
                                {
                                    @class = "text-danger"
                                })
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PassWord" class="form-label"></label>
                            <input asp-for="PassWord" class="form-control form-control-lg transition-shadow" />
                            @Html.ValidationMessageFor(model => model.PassWord, "", new
                                {
                                    @class = "text-danger"
                                })
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill transition-shadow">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .transition-shadow {
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

            .transition-shadow:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transform: scale(1.02);
            }

        .card {
            background-color: #ffffff;
            border-radius: 1rem;
        }

        .card-body {
            padding: 2rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-control-lg {
            font-size: 1.1rem;
            border-radius: 0.5rem;
        }

        .form-label {
            font-size: 0.875rem;
        }

        .text-primary {
            color: #221d90 !important;
        }
    </style>
}
